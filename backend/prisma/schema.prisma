generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model lead {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  firstName        String
  lastName         String
  email            String
  jobTitle         String?
  countryCode      String?
  companyName      String?
  message          String?
  emailVerified    Boolean?
  phone            String?
  phoneProvider    String?
  phoneCountryCode String?
  testField        String  // Required field without default value to force pipeline error
}
